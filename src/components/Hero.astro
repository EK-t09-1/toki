---
import "../css/main.css";
---

<section class="hero">
  <div class="text">
    <p class="hero-h1">Packaging.</p>
    <p class="hero-h2">The silent hero</p>
  </div>

  <div class="icons">
    <img src="/src/assets/hero-icons.webp" alt="Packaging icon" />
    <img src="/src/assets/hero-icons.webp" alt="Packaging icon" />
    <img src="/src/assets/hero-icons.webp" alt="Packaging icon" />
  </div>

  <style>
    .hero {
      background-color: var(--secondary-color);
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      padding: 3rem 8rem 2rem 0;
      min-height: 200px;
    }

    .text {
      color: var(--dark-brown);
      margin-left: 62.67px;
      margin-top: 75px;
    }

    .hero-h1 {
      font-weight: SpaceGrotesk-Light;
      font-size: 2.4rem;
      font-weight: 300;
      margin: 0;
      padding-top: 0;
      line-height: 1.15;
    }

    .hero-h2 {
      font-weight: SpaceGrotesk-Light;
      font-size: 2.4rem;
      font-weight: 300;
      margin-top: 0.3rem;
      line-height: 1.15;
    }

    .icons {
      display: flex;
      align-items: flex-start;
      gap: 10rem;
      padding-right: 22rem;
      padding-top: 1.2rem;
    }

    .icons img {
      width: 100px;
      height: auto;
    }

    @media (max-width: 900px) {
      .hero {
        flex-direction: column;
        align-items: center;
        padding: 3rem 2rem;
        text-align: center;
      }

      .text {
        margin-left: 0;
      }

      .icons {
        gap: 3rem;
        padding-right: 0;
        padding-top: 2rem;
      }

      .icons img {
        width: 80px;
      }
    }
  </style>
</section>
