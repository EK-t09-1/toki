---
const { CTAText, CTALink } = Astro.props;
---

<a class="button-green" href={CTALink}>{CTAText}</a>

<style>
  .button-green:hover {
    cursor: pointer;
    border-radius: 5px;
    background: #61745e;
    box-shadow:
      inset 5px 5px 5px var(--cta-hover-background-color),
      inset -5px -5px 5px #9cb798;
  }

  .button-green {
    padding: 10px 30px;
    margin: 20px;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: var(--cta-font);
    font-size: var(--cta-font-size);
    color: var(--green-cta-text-color);
    border-radius: 5px;
    background: #61745e;
    box-shadow:
      5px 5px 5px #dadad9,
      -5px -5px 5px #f0f0ef;
  }
</style>
