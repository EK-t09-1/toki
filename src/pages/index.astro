---
import Layout from "../layouts/Layout.astro";
import Reviews from "../components/Reviews.astro";
import Hero from "../components/Hero.astro";
import Expertsection from "../components/Expertsection.astro";
import CaseSection from "../components/CaseSection.astro";
import TokiFlow from "../components/TokiFlow.astro";
import ButtonWhite from "../components/ButtonWhite.astro";
import "../css/main.css";
---

<Layout>
  <main>
    <Hero />
    <h2>Explore our cases</h2>
    <CaseSection />
    <div class="view-more-button">
      <ButtonWhite CTALink="/listview" CTAText="VIEW MORE CASES" />
    </div>
    <TokiFlow />
    <Reviews />
    <Expertsection />
  </main>
</Layout>

<style>
  .main {
    position: relative;
  }

  h2 {
    display: flex;
    justify-content: center;
  }

  .view-more-button {
    display: flex;
    justify-content: center;
  }
</style>
